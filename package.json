{
  "name": "quizter",
  "version": "0.12.11",
  "private": true,
  "dependencies": {
    "@capacitor-community/background-geolocation": "^1.2.26",
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "^7.0.2",
    "@capacitor/haptics": "^7.0.2",
    "@capacitor/local-notifications": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@stripe/react-stripe-js": "^4.0.2",
    "@stripe/stripe-js": "^7.9.0",
    "eruda": "^3.4.3",
    "leaflet": "^1.9.4",
    "leaflet-polylinedecorator": "^1.6.0",
    "node-fetch": "^2.7.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.23.1",
    "react-scripts": "5.0.1",
    "uuid": "^10.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "dev": "npm run build && npx wrangler pages dev build --port 8788 --d1 DB",
    "dev:build": "npm run build && npx wrangler pages dev build --port 8788 --d1 DB",
    "dev:api": "npx wrangler pages dev . --port 8788 --d1 DB",
    "dev:test": "npx wrangler pages dev . --port 8788 --d1 DB",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:api": "node scripts/run-all-tests.js",
    "test:e2e": "node tests/api/game-flow.test.js",
    "test:e2e:local": "node scripts/test-e2e.js",
    "test:e2e:wait": "npm run test:wait-for-server && npm run test:e2e",
    "test:wait-for-server": "node -e \"const fetch=require('node-fetch');(async()=>{for(let i=0;i<30;i++){try{await fetch('http://127.0.0.1:8788/api/runs');console.log('Server ready!');process.exit(0)}catch{await new Promise(r=>setTimeout(r,1000))}}console.error('Server timeout');process.exit(1)})()\"",
    "predeploy": "npm run test:wait-for-server && npm run test:api",
    "deploy": "npm run build && npx wrangler pages deploy build",
    "eject": "react-scripts eject",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop quizter",
    "pm2:restart": "pm2 restart quizter",
    "pm2:delete": "pm2 delete quizter",
    "pm2:logs": "pm2 logs quizter",
    "pm2:status": "pm2 status"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "pm2": "^6.0.13",
    "tailwindcss": "^3.4.4",
    "wrangler": "^4.56.0"
  }
}
